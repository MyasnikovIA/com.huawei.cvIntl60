<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1495">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="900">
                <LinearLayout
                    android:id="@+id/LL_ui_autobackup_NormalTopLayout"
                    android:background="@color/darkBlueForTitle"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="80"
                    android:layout_weight="120">
                    <ImageButton
                        android:id="@+id/IB_ui_autobackup_btnReturn"
                        android:background="@color/transparent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/setting_tabarrow"
                        android:scaleType="fitCenter"
                        android:layout_weight="8"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="65"/>
                    <ImageButton
                        android:id="@+id/IB_ui_autobackup_btnMore"
                        android:background="@color/transparent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/gallery_button_more_normal"
                        android:scaleType="fitCenter"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <ListView
                    android:id="@+id/LV_ui_autobackup_listWifi"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="1dp"
                    android:layout_weight="780"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_ui_autobackup_EnterPasswordLayout"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="80">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="45"
                    android:layout_weight="45">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:id="@+id/LL_SsidLayout"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="10"
                        android:layout_weight="10">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/darkBlueForTitle"
                            android:id="@+id/SSIDlabel"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="    SSID"
                            android:layout_weight="3"/>
                        <EditText
                            android:id="@+id/SSIDeditText"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:lines="2"
                            android:ems="10"
                            android:layout_weight="6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="10"
                        android:layout_weight="10">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/darkBlueForTitle"
                            android:id="@+id/TV_ui_autobackup_passwordLabel"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="    Password"
                            android:layout_weight="3"/>
                        <EditText
                            android:id="@+id/ET_ui_autobackup_passwordEditText"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:lines="2"
                            android:ems="10"
                            android:password="true"
                            android:layout_weight="6"
                            android:inputType="textPassword"
                            android:fontFamily="sans-serif"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="60"
                        android:layout_weight="5">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"/>
                        <CheckBox
                            android:textStyle="bold"
                            android:textColor="@color/grey"
                            android:id="@+id/CB_ui_autobackup_password_toggle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Show password"
                            android:layout_weight="50"/>
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="10"
                        android:layout_weight="10">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/darkBlueForTitle"
                            android:id="@+id/TV_autobackup_securityLable"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="    Security"
                            android:layout_weight="3"/>
                        <Spinner
                            android:id="@+id/SP_autobackup_securitySpinner"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="6"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="45"
                    android:layout_weight="15">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"/>
                    <Button
                        android:textColor="@color/white"
                        android:id="@+id/B_ui_autobackup_btncancel"
                        android:background="@drawable/setting_wifi_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Cancel"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"/>
                    <Button
                        android:textColor="@color/white"
                        android:id="@+id/B_ui_autobackup_btnDone"
                        android:background="@drawable/setting_wifi_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Done"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LL_ui_autobackup_NavigationBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="105"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_ui_autobackup_MoreOptionBackgroundLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="840"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="900"
            android:layout_weight="620">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="120"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/LL_ui_autobackup_MoreOptionLayout"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="260">
                <ListView
                    android:id="@+id/LV_ui_autobackup_listMoreOption"
                    android:visibility="visible"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="520"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="140"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/FL_ui_autobackup_GreyBG"
        android:background="@color/black"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"/>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/PB_ui_autobackup_ProgressBar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:id="@+id/LL_ui_autobackup_ProgressLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="684"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="900"
            android:layout_weight="246">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="327"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="245">
                <ImageView
                    android:id="@+id/IV_ui_autobackup_ProgressIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/anim_busy_white_background"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
