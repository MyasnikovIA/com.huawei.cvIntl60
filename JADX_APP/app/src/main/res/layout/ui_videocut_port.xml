<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="200">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <GeneralFunction.Player.player.SphericalVideoPlayer
            android:id="@+id/TV_ui_videocut_VideoPlayer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <LinearLayout
            android:id="@+id/LL_ui_videocut_TopLayout"
            android:background="@color/blackt50"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="900"
            android:layout_weight="140">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="140"
                android:layout_weight="150">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="37"/>
                <ImageButton
                    android:id="@+id/IB_ui_videocut_ArrowIcon"
                    android:background="@color/transparent"
                    android:visibility="invisible"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:scaleType="fitCenter"
                    android:layout_weight="66"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="37"/>
            </LinearLayout>
            <TextView
                android:gravity="center"
                android:id="@+id/TV_ui_videocut_VideoCut"
                android:visibility="invisible"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="370"/>
            <TextView
                android:gravity="center"
                android:id="@+id/TV_ui_videocut_FileSize"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="190"/>
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="190">
                <ImageButton
                    android:id="@+id/IB_ui_videocut_SaveIcon"
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:textSize="9sp"
                    android:textColor="@color/white"
                    android:gravity="bottom|center_horizontal"
                    android:id="@+id/TV_ui_videocut_SaveIcon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1390"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LL_ui_videocut_VideoControlBar"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="210">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="900"
                android:layout_weight="150">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="44"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="150"
                    android:layout_weight="96">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="27"/>
                    <ImageButton
                        android:id="@+id/IB_ui_videocut_PlayIcon"
                        android:background="@color/transparent"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:scaleType="fitCenter"
                        android:layout_weight="96"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="27"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="625">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="200">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="133"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:weightSum="625"
                            android:layout_weight="67">
                            <TextView
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:id="@+id/TV_ui_videocut_MovieStartTime"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="300"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="25"/>
                            <TextView
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:id="@+id/TV_ui_videocut_MovieEndTime"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="300"/>
                        </LinearLayout>
                    </LinearLayout>
                    <FrameLayout
                        android:id="@+id/FL_ui_videocut_SelectScrollBar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </FrameLayout>
                <TextView
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:id="@+id/TV_ui_videocut_MovieLength"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="135"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="60"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LL_ui_videocut_ProgressLayout"
        android:background="@color/blackt50"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="650"/>
        <ImageView
            android:id="@+id/IV_ui_videocut_ProgressIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/anim_busy_white_background"
            android:scaleType="fitCenter"
            android:layout_weight="150"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/TV_ui_videocut_Content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/saving_files"
            android:layout_weight="150"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="650"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LL_ui_videocut_MemoryFullLayout"
        android:background="@color/blackt50"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="550"/>
        <ImageView
            android:id="@+id/IV_ui_videocut_MemoryFullIcon"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:src="@drawable/system_ep_white"
            android:scaleType="fitCenter"
            android:layout_weight="150"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/TV_ui_videocut_MemoryFullMsg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/memory_full"
            android:layout_weight="120"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="100"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="900"
            android:layout_weight="120">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="315"/>
            <Button
                android:textColor="@color/white"
                android:id="@+id/B_ui_videocut_MemoryFullConfirm"
                android:background="@drawable/btn_bg_blue"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:text="@string/dialog_option_ok"
                android:layout_weight="270"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="315"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="560"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LL_ui_videocut_BlackScreen"
        android:background="@color/black"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600"/>
</FrameLayout>
