<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/lightgray"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LL_ui_AutoSend_Background"
        android:background="@null"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="900">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1600"
            android:layout_weight="150">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:weightSum="258"
                android:layout_weight="186">
                <ImageButton
                    android:id="@+id/IB_ui_AutoSend_Returnbtn"
                    android:background="@null"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@null"
                    android:scaleType="fitCenter"
                    android:layout_weight="151"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="107"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="442"/>
            <TextView
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/TV_ui_AutoSend_Title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Large Text"
                android:layout_weight="407"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="601"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="356"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="1600"
            android:layout_weight="134">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="312"/>
            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/TV_ui_AutoSend_Description"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="Medium Text"
                android:singleLine="false"
                android:layout_weight="989"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="312"/>
        </LinearLayout>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/TV_ui_AutoSend_Sending"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Medium Text"
            android:layout_weight="62"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="89"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/LL_ui_AutoSend_NavigationBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1494"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LL_ui_AutoSend_NavigationBar_Menu"
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="106"/>
    </LinearLayout>
</FrameLayout>
