<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1495">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/LL_ui_settingmenu_NormalLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="900">
                <LinearLayout
                    android:id="@+id/LL_ui_settingmenu_NormalTopLayout"
                    android:background="@color/darkBlueForTitle"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:weightSum="80"
                    android:layout_weight="120">
                    <ImageButton
                        android:id="@+id/IB_ui_settingmenu_btnReturn"
                        android:background="@color/transparent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/setting_tabarrow"
                        android:scaleType="fitCenter"
                        android:layout_weight="8"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center_vertical"
                        android:id="@+id/TV_ui_settingmenu_textTopTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:layout_weight="40"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="28"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"/>
                </LinearLayout>
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="780">
                    <ListView
                        android:id="@+id/LV_ui_settingmenu_listOption"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"/>
                    <ListView
                        android:id="@+id/LV_ui_settingmenu_AboutList"
                        android:visibility="invisible"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/LL_ui_settingmenu_cameraNamePage"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="80">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="45"
                    android:layout_weight="45">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:weightSum="10"
                        android:layout_weight="10">
                        <TextView
                            android:textStyle="bold"
                            android:textColor="@color/darkBlueForTitle"
                            android:id="@+id/TV_ui_settingmenu_cameraNameLabel"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:text="    Camera Name"
                            android:layout_weight="3"/>
                        <EditText
                            android:id="@+id/ET_ui_settingmenu_cameraNameEditText"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:lines="2"
                            android:ems="10"
                            android:maxLength="20"
                            android:layout_weight="6"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="12"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:weightSum="45"
                    android:layout_weight="15">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="15"/>
                    <Button
                        android:textColor="@color/white"
                        android:id="@+id/B_ui_settingmenu_btncancel"
                        android:background="@drawable/setting_wifi_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Cancel"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"/>
                    <Button
                        android:textColor="@color/white"
                        android:id="@+id/B_ui_settingmenu_btnDone"
                        android:background="@drawable/setting_wifi_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:text="Done"
                        android:layout_weight="6"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="10"/>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LL_ui_settingmenu_NavigationBar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="105"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/FL_ui_settingmenu_GreyBG"
        android:background="@color/black"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.6"/>
    <LinearLayout
        android:id="@+id/LL_ui_settingmenu_HideMenuBG"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="80">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/LL_ui_settingmenu_MenuLayout"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="45"
            android:layout_weight="40">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/LL_ui_reserved_top"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="6"/>
            <LinearLayout
                android:id="@+id/LL_ui_settingmenu_submenu_title"
                android:background="@color/darkBlueForTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="34"
                android:layout_weight="6">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:id="@+id/TV_ui_settingmenu_submenu_title"
                    android:visibility="visible"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="33"
                    android:alpha="1"/>
            </LinearLayout>
            <ListView
                android:id="@+id/LV_ui_settingmenu_sublistOption"
                android:background="@color/white"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="1dp"
                android:listSelector="@color/white"
                android:cacheColorHint="@color/white"
                android:layout_weight="1"
                android:alpha="1"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"/>
    </LinearLayout>
    <ProgressBar
        android:layout_gravity="center"
        android:id="@+id/PB_ui_setting_ProgressBar"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LL_ui_settingmenu_ProgressLayout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="900">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="327"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="245">
            <ImageView
                android:id="@+id/IV_ui_settingmenu_ProgressIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/anim_busy_white_background"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <TextView
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/TV_ui_camerasetting_progress_String"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Medium Text"
            android:layout_weight="113"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/LL_ui_settingmenu_CameraUpgrade"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1080">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="468"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="144">
            <ImageView
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/setupmenu_cameraupgrade_camera"
                android:scaleType="fitCenter"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="48"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center_horizontal"
            android:id="@+id/TV_ui_settingmenu_CameraUpgradeHint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="1"/>
    </LinearLayout>
</FrameLayout>
