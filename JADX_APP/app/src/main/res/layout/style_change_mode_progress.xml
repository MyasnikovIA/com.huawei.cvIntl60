<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/LL_changing_mode"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1600">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="640"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="900"
            android:layout_weight="320">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="321"/>
            <LinearLayout
                android:id="@+id/LL_ui_Changing_ProgressLayout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="209">
                <ImageView
                    android:id="@+id/IV_ui_Changing_Icon"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/anim_busy_white_background"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
            <TextView
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/TV_ui_Connecting_String"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="Medium Text"
                android:layout_weight="113"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="48"/>
            <Button
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/B_ui_Connecting_Motion"
                android:background="@color/black"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="test"
                android:layout_weight="113"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
