<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="80">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="45">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/darkBlueForTitle"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="45"
            android:layout_weight="4">
            <FrameLayout
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="45">
                <LinearLayout
                    android:id="@+id/LL_ui_BLE_NormalTopLayout"
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="80">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                    <TextView
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/TV_ui_Device_Title"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:text=""
                        android:layout_weight="58"/>
                    <ImageButton
                        android:id="@+id/IB_ui_Device_btnScan"
                        android:background="@color/transparent"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:layout_weight="12"/>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="5"/>
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="30">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:id="@+id/LV_ui_Connection_Device_List"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="1dp"/>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
