<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:orientation="vertical" android:id="@id/TV_DialogTitleLayout" android:background="@drawable/bg_dialog_title" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textColor="@color/dialogText" android:gravity="bottom|center" android:id="@id/TV_DialogTitle" android:background="@color/transparent" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:id="@id/TV_DialogDialogLayout" android:background="@color/white" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <TextView android:textColor="@color/dialogText" android:gravity="center_vertical" android:id="@id/TV_DialogDialog" android:background="@color/transparent" android:scrollbars="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent" />
    </LinearLayout>
    <LinearLayout android:orientation="horizontal" android:id="@id/TV_DialogButtonLayout" android:background="@drawable/bg_dialog_bottom" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <Button android:id="@id/B_DialogLeftButton" android:background="@drawable/style_dialog_button_left" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" />
        <Button android:id="@id/B_DialogRightButton" android:background="@drawable/style_dialog_button_right" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="" />
    </LinearLayout>
</LinearLayout>
